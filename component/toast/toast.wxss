.toast-content-box{
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
}
.toast-content{
  width: 50%;
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
}
.toast-content-text{
  width: 100%;
  height: 100%;
  color: white;
  font-size: 28rpx;
  text-align: center;
}