<!--index.wxml-->
<import src="../../component/toast/toast.wxml" />
<template is="toast" data="{{..._toast_}}" />
      <view class="page">
      <!--轮播图片-->
        <swiper class='swiper' indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:key="{{item}}" wx:for="{{imgUrls}}">
          <swiper-item>
            <image src="{{item}}" lazy-load="true" class="slide-image"/>
          </swiper-item>
        </block>
      </swiper>
      </view>

       <view style="height: 100rpx;">
      <image style="width: 100%; height: 55px;"  src="/resource/home/bg.png" bindload="imageLoad"></image>       
      <view class="userinfo">
          <text class='welcomeText'></text>
          <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
          <block wx:else>
            <image lazy-load='true' bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl||userInfo.avatar}}" background-size="cover"></image>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
          </block>
          <text class='welcomeText'>欢迎光临 印诺极速刻章</text>
      </view>
      </view>

      <view class='span_height_30'></view>

      <view class='page'>
      <navigator url="/pages/index/about/about" hover-class="navigator-hover">
        <view class='menu_item'>              
            <view class='menu_img'>
              <image  style='height:55rpx;width:55rpx' src='/resource/home/guide.png'></image>           
            </view>  
            <text>刻章指南</text> 
            <image class='right_arrow' src='/resource/common/right.png'></image> 
        </view>
        </navigator>

        <view class='span_height_2_pl'></view>

      <navigator url="/pages/index/seal/seal" hover-class="navigator-hover">
          <view class='menu_item'>              
              <view class='menu_img'>
                <image style='height:55rpx;width:55rpx' src='/resource/home/seal64.png'></image>           
              </view>  
              <text>我要刻章</text> 
              <image class='right_arrow' src='/resource/common/right.png'></image> 
          </view>
      </navigator>  

         <view class='span_height_2_pl'></view>    

        <navigator url="/pages/index/sealplan/sealplan" hover-class="navigator-hover">
          <view class='menu_item'>              
              <view class='menu_img'>
                <image src='/resource/home/plan.png'></image>           
              </view>  
              <text>进度查询</text> 
              <image class='right_arrow' src='/resource/common/right.png'></image> 
          </view>
        </navigator>
        
      <view class='span_height_30'></view>
     
        <navigator url="/pages/index/shop/shop" hover-class="navigator-hover">
          <view class='menu_item'>              
              <view class='menu_img'>
                <image  style='height:55rpx;width:55rpx' src='/resource/home/nearest.png'></image>           
              </view>  
              <text>优质刻章店</text> 
              <image class='right_arrow' src='/resource/common/right.png'></image> 
          </view>
        </navigator>

        <view class='span_height_2_pl'></view>  

        

        <navigator url="/pages/index/about/about" hover-class="navigator-hover">
        <view class='menu_item'>              
            <view class='menu_img'>
              <image src='/resource/home/about.png'></image>           
            </view>  
            <text>关于我们</text> 
            <image class='right_arrow' src='/resource/common/right.png'></image> 
        </view>
        </navigator>

        <view class='span_height_30'></view>
 
  </view>
