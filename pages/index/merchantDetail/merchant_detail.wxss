/* pages/index/merchant_detail.wxss */
.swiper {
  height: 500rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.merchant_info{
  padding: 20rpx;
  font-size:36rpx;
}


.merchant_name{
  color: #c40000;
  font-weight: bold;
  font-size:36rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: block;
}

.phone{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.phone_num{
  color: #c40000;
  width:80%;
  float:left;
}

.imagePhone{  
  height: 50rpx;
  width:50rpx;
  padding-top:5rpx;
  float:left;
}

.address{
  width:70%;
  float:left;
  height:100rpx;
  font-size: 32rpx;
}

.title{
  width:100%;
  float:left;
  display:block;
  height:60rpx;
  line-height:60rpx;
  margin-top:30rpx;
}

.title .titleDesc{
  width:25%;
  float:left;
  height:60rpx;
  border-bottom:1px solid #efefef;
  line-height:60rpx;
  color:#387ef5;  
  font-weight: bold;
  font-size: 36rpx;
}
.title .titleBlank{
  width:75%;
  float:left;
  background:#efefef;
  height:60rpx;
  line-height:60rpx;
}
.content{
  float:left;
  text-align:justify;
  padding:10rpx;
  font-size:32rpx;
}