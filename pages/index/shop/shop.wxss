/* pages/index/shop/shop.wxss */
.merchant_list{
  float: left;
  width: 100%;
}
.merchant_list image{
  height: 250rpx;
  width: 250rpx;
  margin: 20rpx;
  border: 1px solid #c40000;
  float: left;
}
.merchant_list_text{
  margin: 10rpx;
  float: left;
  width:300rpx;
  height: 250rpx;
  font-size: 32rpx;
}

.merchant_list_text .name{
  float: left;
  height: 100rpx;
  padding-top: 10rpx;
  width:100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
} 
.merchant_list_text .phone{
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  color: #c40000;
  font-size: 36rpx;
  width:100%;
} 
.merchant_list_text .address{
  float: left;
  height: 100rpx;
  color: #8a8a8a;
  width:100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
} 

.distance{
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 10rpx;
  color: #387ef5;
  font-size: 36rpx;
} 
.tips1{
    font-size: 14px;
    padding-top: 10px;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    color: #969696;
    text-align: center;
}