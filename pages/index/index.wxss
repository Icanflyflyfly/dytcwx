/**index.wxss**/
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.hot_active {
  margin-top: 10rpx;
  height: 70rpx;
  width: 100%;
  padding-left: 5rpx;
  color: #c40000; 
  line-height: 70rpx;
  font-size: 36rpx;
}
.hot_active image{
  width:64rpx;
  height:64rpx;
  float: left;  
}
.hot_active text{
  float: left;
}
.hot_merchant {
  margin-top: 10rpx;
  height: 70rpx;
  width: 100%;
  padding-left: 5rpx;
  color: #c40000; 
  line-height: 70rpx;
  border-bottom: 1px solid #efefef;
  float: left;
  font-size: 36rpx;
}
.hot_merchant image{
 width:50rpx;
 height:50rpx;
 padding:12rpx;
 float: left;
}
.hot_merchant text{
  float: left;
}
.active_img image{
  width: 100%;
  height: 200rpx;
  float: left;
  margin-top:10rpx;
}
.select_text{
   padding: 20rpx 10rpx;
   display: block;
   float: left;
   font-size: 32rpx;
}
.merchant_list{
  float: left;
  width: 100%;
}
.merchant_list image{
  height: 250rpx;
  width: 250rpx;
  margin: 20rpx;
  border: 1px solid #c40000;
  float: left;
}
.merchant_list_text{
  margin: 10rpx;
  float: left;
  width:300rpx;
  height: 250rpx;
  font-size: 32rpx;
}

.merchant_list_text .name{
  float: left;
  height: 90rpx;
  padding-top: 10rpx;
} 
.merchant_list_text .phone{
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  color: #c40000;
  font-size: 36rpx;
} 
.merchant_list_text .address{
  float: left;
  height: 80rpx;
  color: #8a8a8a;
} 

.distance{
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 10rpx;
  color: #387ef5;
  font-size: 36rpx;
} 
