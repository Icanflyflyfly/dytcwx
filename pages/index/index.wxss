/**index.wxss**/
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.hot_active {
  margin-top: 10rpx;
  height: 70rpx;
  width: 100%;
  padding-left: 5rpx;
  color: #c40000; 
  line-height: 70rpx;
  font-size: 36rpx;
}
.hot_active image{
  width:64rpx;
  height:64rpx;
  float: left;  
}
.hot_active text{
  float: left;
}
.hot_merchant {
  height: 70rpx;
  width: 100%;
  padding-left: 5rpx;
  color: #FFF; 
  line-height: 70rpx;
  border-bottom: 1px solid #efefef;
  font-size: 36rpx;
  background-color: #c40000

}
.hot_merchant image{
 width:50rpx;
 height:50rpx;
 padding:12rpx;
 float: left;
}
.hot_merchant text{
  float: left;
}
.active_img image{
  width: 100%;
  height: 200rpx;
  float: left;
  margin-top:10rpx;
}
.select_text{
   padding: 20rpx 10rpx;
   display: block;
   float: left;
   font-size: 32rpx;
}
.merchant_list{
  float: left;
  width: 100%;
}
.merchant_list image{
  height: 250rpx;
  width: 250rpx;
  margin: 20rpx;
  border: 1px solid #c40000;
  float: left;
}
.merchant_list_text{
  margin: 10rpx;
  float: left;
  width:300rpx;
  height: 250rpx;
  font-size: 32rpx;
}

.merchant_list_text .name{
  float: left;
  height: 100rpx;
  padding-top: 10rpx;
  width:100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
} 
.merchant_list_text .phone{
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  color: #c40000;
  font-size: 36rpx;
  width:100%;
} 
.merchant_list_text .address{
  float: left;
  height: 100rpx;
  color: #8a8a8a;
  width:100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
} 

.distance{
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 10rpx;
  color: #387ef5;
  font-size: 36rpx;
} 
.tips1{
    font-size: 14px;
    padding-top: 10px;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    color: #969696;
    text-align: center;
}
.welcomeText{
  color:#FFF;
  line-height:60px;
  font-size: 32rpx;
  padding-top: 8rpx;
}
.userinfo {
  display: flex;
  position: absolute;
  top: 390rpx;
  left: 20rpx;
  width: 100%;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;  
  border-radius: 50%;
}

.userinfo-nickname {
  display: flex;
  color: #ffc900;
  align-items: center;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width:250rpx;
}
