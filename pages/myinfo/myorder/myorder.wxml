<!--pages/myinfo/myorder/myorder.wxml-->
<!--pages/member/consume/consume.wxml-->
<import src="../../../component/toast/toast.wxml" />
<template is="toast" data="{{..._toast_}}" />

<loading hidden="{{hidden}}" bindchange="loadingChange">
    加载中...
</loading> 

<scroll-view scroll-y="true" style="height: {{scrollHeight}}px;" bindscrolltolower="loadMore">
     
      <view class='span_height_20'></view>

      <view style='font-size:30rpx;height:100rpx;width:100%;'  wx:for="{{list}}" wx:for-item="item" wx:key="time">
          <view style='padding:10rpx;'>
            <view style='width:100%;float:left;line-height:80rpx;'>
              <text style='display:block;'>订单编号：{{item.orderNo}}</text>
              <text style='display:block;'>下单时间：{{item.orderTime}}</text>
            </view>           
            <view style='width:100%;float:left;line-height:80rpx;'>
              <text  style='display:block;'>店家名称：{{item.shopName}}</text>
            </view>
            <view style='width:100%;float:left;padding-top:10rpx;'>
              <text class='textFormat'>订单状态：{{item.orderStatus==1?"已支付":"未支付"}}</text>             
            </view>
            <view style='width:100%;float:left;padding-top:10rpx;'>
              <text class='textFormat'>支付金额：{{item.totalAmount}}元</text>             
            </view> 
            <view style='width:100%;float:left;padding-top:10rpx;'>
              <text class='textFormat'>支付时间：{{item.payTime}}</text>             
            </view>                 
          </view>
          <view style="float: left;height: 10rpx;width: 100%;background-color: #efefef;"></view>
      </view>

    <view class="tips1">
        <view wx:if="{{hasMore}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;">
        <icon size="45"/><text>加载中...</text></view>
        <view wx:else><text>没有更多内容了</text></view>
    </view>
 </scroll-view>

