<!--pages/member/setting/bank/bank.wxml-->
<import src="../../../../component/toast/toast.wxml" />
<template is="toast" data="{{..._toast_}}" />
 <view>
 <view class='span_height_30'></view>

<view class="section" >
  <picker bindchange="bindBankChange"  value='{{index}}' range="{{banks}}">
    <view class="picker">        
        <text class='select_text' style='width:100%'>选择开户行：{{banks[index]}}</text>
    </view>
</picker>
</view>

<view class='span_height' style='float:left'></view>

        <view class="section input_view">
          <text>开户银行</text>
          <input class='input' type='text' value='{{bank}}' bindinput='bankInput' placeholder="请输入开户行"/> 
        </view>

        <view class='span_height' style='float:left'></view>

        <view class="section input_view">
        <text>银行卡号</text>
          <input class='input' type='number' value='{{bankCardNo}}' bindinput='bankCardNoInput' placeholder="请输入银行卡号"/>
        </view>

        <view class='span_height_30' style='float:left'></view>
  </view>

  <view style='margin:0rpx 20rpx'>
    <button class="weui-btn" type="warn"  bindtap='onUpdateBank'>设置</button>    
  </view>

