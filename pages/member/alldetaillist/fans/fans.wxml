<!--pages/member/fans/fans.wxml-->
<import src="../../../../component/toast/toast.wxml" />
<template is="toast" data="{{..._toast_}}" />

<loading hidden="{{hidden}}" bindchange="loadingChange">
    加载中...
</loading> 
<view class='span_height_20'></view>

<scroll-view scroll-y="true" style="height: 100%;" bindscrolltolower="loadMore">
     
      <view class='span_height_20'></view>

      <view style='font-size:30rpx;width:100%;padding:10rpx 0rpx 10rpx 30rpx;color: #444;'  wx:for="{{list}}" wx:for-item="item" wx:key="time">
        <view style='padding:10rpx;'>
            <view style='width:45%;float:left;'>
              <text style='display:block;'>会员名：{{item.fromUserInfo.name}}</text>
              <text  style='display:block;'>手机号：{{item.fromUserInfo.phone}}</text>
            </view>
            <view style='width:54%;float:left;'>
              <text  style='display:block;'>注册时间：{{item.fromUserInfo.time}}</text>
            </view>
          </view>
      </view>

    <view class="tips1">
        <view wx:if="{{hasMore}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;">
        <icon type="waiting" size="45"/><text>加载中...</text></view>
        <view wx:else><text>没有更多内容了</text></view>
    </view>
 </scroll-view>

<view class='span_height_20'></view>
